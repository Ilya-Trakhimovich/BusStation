@model Card

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-3"></div>
        <div class="col-md-6 border border-primary">
            <div class="row justify-content-center col-md-auto">
                <div style="margin-bottom:10px; color: darkslategrey;font-style: italic; font-weight: bold; font-family: Candara, sans-serif;">
                    <span>PAYMENT CARD</span>
                </div>
            </div>
            <form asp-action="BuyTicket" asp-controller="Ticket" method="post">
                <div class="form-group">
                    <input asp-for="@Model.TripId" type="hidden" />
                </div>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="row justify-content-center" style="margin-bottom:5px;">
                    <div class="input-group col-md-9">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-credit-card" viewBox="0 0 16 16">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1H2zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V7z" />
                                <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z" />
                            </svg>
                        </span>
                        <input asp-for="@Model.CreditNumber" class="form-control" type="text" style="text-align:center;" placeholder="CARD NUMBER" id="CreditCard" />
                    </div>
                </div>
                <div class="row justify-content-center col-md-auto" style="margin-bottom:5px;">
                    <div><span asp-validation-for="@Model.CreditNumber" class="text-danger"></span></div>
                </div>
                <div class="row justify-content-center" style="margin-bottom:5px;">
                    <div class="input-group col-md-4">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                        </span>
                        <input asp-for="@Model.Month" class="form-control" style="text-align:center;" placeholder="MONTH" id="Month" />
                    </div>
                    <div class="col-md-1"><span>/</span></div>
                    <div class="input-group col-md-4">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16">
                                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                        </span>
                        <input asp-for="@Model.Year" class="form-control" style="text-align:center;" placeholder="YEAR" />
                    </div>
                </div>
                <div class="row justify-content-center col-md-auto">
                    <div><span asp-validation-for="@Model.Month" class="text-danger"></span></div>
                </div>
                <div class="row justify-content-center col-md-auto" style="margin-bottom:5px;">
                    <div><span asp-validation-for="@Model.Year" class="text-danger"></span></div>
                </div>
                <div class="row justify-content-center" style="margin-bottom:5px;">
                    <div class="input-group col-md-9">
                        <span class="input-group-text">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-lock2" viewBox="0 0 16 16">
                                <path d="M10 7v1.076c.54.166 1 .597 1 1.224v2.4c0 .816-.781 1.3-1.5 1.3h-3c-.719 0-1.5-.484-1.5-1.3V9.3c0-.627.46-1.058 1-1.224V7a2 2 0 1 1 4 0zM7 7v1h2V7a1 1 0 0 0-2 0z" />
                                <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                            </svg>
                        </span>
                        <input asp-for="@Model.VerificationNumber" class="form-control" type="text" style="text-align:center;" placeholder="CVV" />
                    </div>
                </div>
                <div class="row justify-content-center col-md-auto" style="margin-bottom:5px;">
                    <span asp-validation-for="@Model.VerificationNumber" class="text-danger"></span>
                </div>
                <div class="row row justify-content-center col-md-auto">
                    <button class="btn btn-primary" type="submit" style="margin-bottom:20px;">Buy ticket</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $("#CreditCard").inputmask({
        mask: "9999 9999 9999 9999"
    });

    $("#month").inputmask({
        mask: "99/99"
    });

    if ($(".validation-summary-errors")) {
        $("#Month").css("border", "1px solid #b94a48");
    }
</script>

